<Window x:Class="Character_Sheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Character_Sheet"
        mc:Ignorable="d" FontSize="16"
        Title="Character Creator" Height="400" Width="800" FontFamily="Cambria">
    <TabControl>
        <TabItem Header="Character">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>

                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Name" Grid.Column="1" Grid.Row="1" FontWeight="Bold" Margin="0,0,0,0"/>
                    <Border BorderBrush="Gainsboro" BorderThickness="1,1,4,4" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="6" Margin="0,15,0,20">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock x:Name="textBlock_CharacterName" Text="Name" Margin="0,0,10,0"/>

                            <TextBlock x:Name="textBlock_CharacterRace" Text="Race" VerticalAlignment="Bottom" Margin="0,0,10,0"/>

                            <TextBlock x:Name="textBlock_CharacterClass" Text="Class"  VerticalAlignment="Bottom" Margin="0,0,10,0"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="Hit Points" Grid.Column="1" Grid.Row="2" FontWeight="Bold" Margin="0,-15,0,0"/>
                    <Border BorderBrush="Gainsboro" BorderThickness="1,1,4,4" Grid.Column="1" Grid.Row="2" Margin="0,2,0,0">
                        
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBox x:Name="textBox_currentHP" Text="0" Margin="0,0,3,0" MinWidth="30" HorizontalContentAlignment="Center" Cursor="IBeam"/>
                            <TextBlock Text="/" Margin="0,0,3,0"/>
                            <TextBlock x:Name="textBlock_maxHP" Text="Max HP" Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>

                            <TextBlock x:Name="textBlock_AC" Text="Class Here"  VerticalAlignment="Bottom" Margin="0,0,10,0"/>
                        




                    <Button Grid.Column="1" Grid.Row="3" Margin="0,10,0,0" MinHeight="25" MinWidth="50" Content="Load" Click="Load"/>

                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
    
    
    
</Window>
